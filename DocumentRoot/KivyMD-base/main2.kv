

MDScreen:
    MDTopAppBar:
        title: "PymeShield"
        elevation: 4
        pos_hint: {"top": 1}
        md_bg_color: "#ff6720"
        specific_text_color: "black"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

#menu desplegable
    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "Home"
                MDLabel:
                    text:"Screen Home"
                    halign: "center"
                Image:
                    source: 'Img/inici.jpg'
            MDScreen:
                name: "Scanner"
                MDLabel:
                    text:"QR"
                    halign: "center"
                Image:
                    source: 'Img/scanQR.png'

            MDScreen:
                name: "Inventari"
                MDBoxLayout:
                    orientation:"vertical"
                    pos_hint: {'center_y': .39, 'x': .0}
                    MDScrollView:
                        MDList:
                            id: list

            MDScreen:
                name: "QR"
                MDLabel:
                    text:"QR Screen"
                    halign: "center"
                MDRectangleFlatButton:
                    pos_hint: {'center_y': 0.80, 'x': 0.8}
                    on_release: app.close_camera()
                    MDIcon:
                        icon: 'close'
                        halign: 'center'



                    
            MDScreen:
                name: "Contact"
                MDLabel:
                    text:"Screen Contact Form"
                    halign: "center"

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical' 
                ContentNavigationDrawer:
                    manager: screen_manager
                    nav_drawer: nav_drawer
<ContentNavigationDrawer>:
    MDNavigationDrawerMenu:
        MDNavigationDrawerHeader:
            title: "Pymeshield"
            title_font_style: "H5"
            text: "Men√∫"
            source: "img/logo.png"
            spacing: "16dp"
            padding: "12dp", 0, 0, "56dp"
        DrawerClickableItem:
            text: "Inicio"
            icon: "home"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Inicio"

        DrawerClickableItem:
            text: "Informes"
            icon: "file-document"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Informe"     

        DrawerClickableItem:
            text: "Tareas"
            icon: "clipboard-list"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Tareas"  

        DrawerClickableItem:
            text: "Presupuesto"
            icon: "chart-gantt"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Presupuesto"  

        DrawerClickableItem:
            icon: "book-education"
            text: "Cursos"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Cursos" 

        DrawerClickableItem:
            icon: "email"
            text: "Contacto"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Contacto"

        DrawerClickableItem:
            text: "QR"
            icon: "qrcode-scan"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Inventari"

<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"

<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True
